                -------====== Docker =======-------

# --- Build ---
$ docker build -t app_name .
$ docker run -i -t app_name "eny command and soket"

# -- Ran and -- 
$ docker run -t -i app /bin/sh

# -- Delete -- 
# Clean up all unused or unrelated images, containers, volumes and networks
docker system prune
docker system prune -a

# image list:
docker images -a
 
# del images:
docker rmi $(docker images -a -q)

# conteiner list:
docker ps -a -f status=exited
 
# del conteiners:
docker rm $(docker ps -a -f status=exited -q)

# Запуск командной строки в докере.  
docker exec -ti conteiner_id /bin/sh

# Запуск команды внутри контеинера
docker exec -ti conteiner_id comand_name

