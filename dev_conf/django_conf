                        ---=== Django ===---


# Install django
$ pip install django

# Starting a project
$ django-admin.py startproject project_name

# cteate django modul_app
python manage.py startapp app_name 

# migrate db 
./manage.py makemigrations
./manage.py migrate

# RUN
./manage.py runserver 

# django_admin create super-user
python3 manage.py createsuperuser

# django shell 
./manage.py shell


# Перейдём в дирректорию проекта_Django/ettings.py 
# Раздел: DATABASES

DATABASES = {
    'default': {
        'ENGINE': 'django.db.backends.postgresql_psycopg2',
        'NAME': 'django_db',
        'USER': 'user_name',
        'PASSWORD': 'password',
        'HOST': '127.0.0.1',
        'PORT': '5432',
    }
}


# Template (html) 
# settings.py

TEMPLATES = [
	'DIRS': [ 
		os.path.join(BASE_DIR, 'templates') 
	]
]

# Add in html file
{% extends 'index.html' %} 

# --- Static (css, js, img) ---
# settings.py

STATIC_URL = '/static/'
STATICFILES_DIRS = [
	os.path.join(BASE_DIR, 'static')
]       

# Add in html fili  
{% load static %}

<link rel="stylesheet" href={% static '/css/home_page.css' %}>  


